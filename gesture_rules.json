{
  "meta": {
    "description": "Hand gesture definitions for Hand2Voice",
    "finger_order": ["thumb", "index", "middle", "ring", "pinky"],
    "1": "finger open",
    "0": "finger closed"
  },
  "gestures": {
    "A": { "pattern": [0, 0, 0, 0, 0], "type": "static" },
    "B": { "pattern": [0, 1, 1, 1, 1], "type": "static" },
    "C": { "pattern": [1, 1, 1, 1, 0], "type": "static" },
    "D": { "pattern": [0, 1, 0, 0, 0], "type": "static" },
    "E": { "pattern": [0, 0, 0, 0, 1], "type": "static" },
    "F": { "pattern": [1, 0, 1, 1, 1], "type": "static" },
    "G": { "pattern": [1, 1, 0, 0, 0], "type": "static" },
    "H": { "pattern": [0, 1, 1, 0, 0], "type": "static" },
    "I": { "pattern": [0, 0, 0, 0, 1], "type": "static" },
    "P": { "pattern": [1, 0, 0, 0, 1], "type": "static" },
    "SPACE":  {
      "pattern": [1, 1, 0, 0, 1],
      "type": "control",
      "description": "Word separator (space)"
    },

    
    "DEL": {
      "pattern": [1,1,1,1,1]
    }

  }
}
